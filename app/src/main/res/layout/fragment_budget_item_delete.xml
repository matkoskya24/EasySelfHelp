<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/layout_style"
    android:backgroundTint="@color/money_green"
    tools:context=".BudgetItemDeleteFragment">

    <TextView
        android:id="@+id/textView7"
        style="@style/budget_recycler_text_view_style"
        android:text="@string/are_you_sure_you_want_to_delete"
        android:textAlignment="center"
        android:textSize="@dimen/add_item_text_view_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        style="@style/button_view_style"
        android:backgroundTint="@color/red"
        android:textColor="@color/white"
        android:fontFamily="@font/adamina"
        android:text="Yes"/>


</androidx.constraintlayout.widget.ConstraintLayout>