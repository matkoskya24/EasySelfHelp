<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="layout_style" parent="TextAppearance.AppCompat">
        <item name="android:background">@color/desert_sand</item>
        <item name="android:padding">@dimen/universal_padding</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="title_view_style" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/title_view_text_size</item>
        <item name="android:textColor">@color/orchid</item>
        <item name="fontFamily">@font/sunshiney</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="text_view_style" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/universal_text_size</item>
        <item name="android:textColor">@color/orchid</item>
        <item name="fontFamily">@font/sunshiney</item>
    </style>
    <style name="button_view_style" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/universal_text_size</item>
    </style>
    <style name="main_menu_row_style" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="main_menu_button_style" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_margin">@dimen/main_menu_button_margin</item>
    </style>
    <style name="main_menu_image_button_style" parent="TextAppearance.AppCompat">
        <item name="android:layout_height">@dimen/main_menu_image_button_dimen</item>
        <item name="android:layout_width">@dimen/main_menu_image_button_dimen</item>
        <item name="android:backgroundTint">@color/desert_sand</item>
    </style>
    <style name="main_menu_button_text_view_style" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/main_menu_button_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/sunshiney</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/space_cadet</item>
    </style>
    <style name="recycler_view_style" parent="TextAppearance.AppCompat">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginBottom">@dimen/recycler_view_margin_bottom</item>
    </style>
    <style name="add_item_text_view" parent="TextAppearance.AppCompat">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/add_item_text_view_text_size</item>
        <item name="fontFamily">@font/baloo</item>
    </style>
    <style name="add_item_image_button" parent="TextAppearance.AppCompat">
        <item name="android:layout_height">@dimen/recycler_view_margin_bottom</item>
        <item name="android:layout_width">@dimen/recycler_view_margin_bottom</item>
        <item name="android:backgroundTint">@color/desert_sand</item>
        <item name="android:src">@drawable/add_item_image_asset</item>
    </style>
    <style name="fitness_menu_button" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/periwinkle</item>
        <item name="android:textSize">@dimen/universal_text_size</item>
        <item name="fontFamily">@font/baloo</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="recycler_title_view_style" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/adamina</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">@dimen/universal_text_size</item>
        <item name="android:textColor">@color/gold</item>
    </style>
    <style name="recycler_sub1_view_style" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/adamina</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">@dimen/recycler_text_size_one</item>
        <item name="android:textColor">@color/gold</item>
    </style>
    <style name="recycler_sub2_view_style" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/adamina</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">@dimen/recycler_text_size_two</item>
        <item name="android:textColor">@color/gold</item>
    </style>
    <style name="recycler_view_image_view" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">@dimen/recycler_view_image_dimen</item>
        <item name="android:layout_height">@dimen/recycler_view_image_dimen</item>
    </style>
    <style name="edit_text_style" parent="TextAppearance.AppCompat">
        <item name="android:layout_height">@dimen/edit_text_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/grey</item>
        <item name="android:textSize">@dimen/recycler_text_size_one</item>
    </style>
    <style name="delete_button_style" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">@dimen/delete_button_dimen</item>
        <item name="android:layout_height">@dimen/delete_button_dimen</item>
        <item name="android:src">@drawable/ic_baseline_delete_forever_24</item>
    </style>
    <style name="radio_button_style_homework" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/radio_button_text_size_recycler</item>
        <item name="android:fontFamily">@font/adamina</item>
        <item name="android:layout_marginLeft">@dimen/main_menu_image_button_dimen</item>
    </style>
    <style name="homework_date_edit_text_style" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">@dimen/homework_recyler_date_dimen_one</item>
        <item name="android:layout_height">@dimen/homework_recyler_date_dimen_one</item>
        <item name="android:textAlignment">center</item>
        <item name="android:hint">00</item>
        <item name="android:background">@color/grey</item>
        <item name="android:textSize">@dimen/recycler_text_size_one</item>
        <item name="android:inputType">number</item>
    </style>
    <style name="homework_date_text_view_style" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:inputType">number</item>
        <item name="android:background">@color/space_cadet</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/adamina</item>
        <item name="android:textColor">@color/gold</item>
    </style>
    <style name="homework_date_layout_style" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/main_menu_button_margin</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/grey</item>
    </style>
    <style name="homework_constraint_layout_style" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/main_menu_button_margin</item>
    </style>
    <style name="submit_button_style" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/submit_button_height</item>
        <item name="android:backgroundTint">@color/gold</item>
        <item name="android:fontFamily">@font/adamina</item>
        <item name="android:textSize">@dimen/recycler_text_size_one</item>
    </style>
    <style name="delete_title_view_style" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/adamina</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/add_item_text_view_text_size</item>
        <item name="android:textColor">@color/gold</item>
    </style>
    <style name="acknowledge_button_view_style" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@color/gold</item>
        <item name="android:fontFamily">@font/adamina</item>
        <item name="android:textColor">@color/stop_red</item>
        <item name="android:text">@string/ok</item>
        <item name="android:textSize">@dimen/universal_text_size</item>
    </style>
</resources>